<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ma Bibliothèque</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/styles.css">
</head>
<body>

    <!-- Header avec titre -->
    <header class="site-header">
        <h1>Ma Bibliothèque</h1>
    </header>

    <!-- Barre de navigation -->
    <nav class="navbar">
        <a href="#accueil">Accueil</a>
        <a href="{{ url_for('logout') }}">Déconnexion</a>
    </nav>

    <!-- Section principale -->
    <main class="container">

        <!-- Section Nos Listes -->
        <section id="nos-listes">
            <h2 class="section-title">Explorez Nos Listes</h2>
            <div class="d-flex justify-content-center">
                <form action="{{ url_for('utilisateurs') }}" class="me-2">
                    <button type="submit">Voir les Utilisateurs</button>
                </form>
                <form action="{{ url_for('livres') }}" class="me-2">
                    <button type="submit">Voir les Livres</button>
                </form>
                <form action="{{ url_for('auteurs') }}">
                    <button type="submit">Voir les Auteurs</button>
                </form>
            </div>
        </section>

        <!-- Section Recherche Utilisateur -->
        <section id="recherche">
            <h2 class="section-title">Rechercher un Utilisateur</h2>
            <form action="{{ url_for('find_users') }}" method="post" class="d-flex justify-content-center">
                <input type="text" name="recherche_users" class="form-control me-2" placeholder="Nom de l'utilisateur" style="width: 250px;">
                <button type="submit">Rechercher</button>
            </form>
        </section>

        <!-- Section Recherche de Livres par Siècle -->
        <section id="recherche-siecle">
            <h2 class="section-title">Rechercher des Livres par Siècle</h2>
            <form action="{{ url_for('find_siecle') }}" method="post" class="d-flex justify-content-center">
                <input type="text" name="recherche_siecle" class="form-control me-2" placeholder="Entrer un siècle (ex: 20)" style="width: 250px;">
                <button type="submit">Rechercher</button>
            </form>
        </section>

    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
