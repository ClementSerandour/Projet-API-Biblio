<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Auteurs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/styles.css">
</head>
<body>

    <!-- Header avec titre -->
    <header class="site-header">
        <h1>Liste des Auteurs</h1>
    </header>

    <!-- Barre de navigation -->
    <nav class="navbar">
        <a href="{{ url_for('index') }}">Accueil</a>
        <a href="{{ url_for('logout') }}">Déconnexion</a>
    </nav>

    <!-- Section principale -->
    <main class="container">

        <!-- Section Auteurs -->
        <section id="nos-listes">
            <h2 class="section-title">Explorez notre collection d'auteurs</h2>

            <!-- Affichage des auteurs directement sous le titre, sans bloc de carte -->
            {% import 'macro.j2' as macro %}
            <!-- Affichage des résultats -->
            {{ macro.affichage_result(lst, col) }}
        </section>

    </main>

    <!-- Bootstrap JS (nécessaire pour certains composants de Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
